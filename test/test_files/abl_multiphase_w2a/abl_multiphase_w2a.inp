ABL.Uperiods = 4.0
ABL.Vperiods = 4.0
ABL.deltaU = 1e-5
ABL.deltaV = 1e-5
ABL.normal_direction = 2

OceanWaves.label = W2A1
OceanWaves.W2A1.type = W2AWaves
