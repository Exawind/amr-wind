geometry.prob_hi        =   4.  1.  1.   # Hi corner coordinates
geometry.is_periodic    =   1   0   1    # Periodicity x y z (0/1)

# Boundary conditions
ylo.type                =   "nsw"
ylo.velocity            =   0.  0.  0.
yhi.type                =   "nsw"
yhi.velocity            =   1.  0.  0.

